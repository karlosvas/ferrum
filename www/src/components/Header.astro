---
import FerrumLogo from "@/components/icons/FerrumLogo.astro";
---

<header
  class="flex justify-between bg-secondary/90 border-b border-white/10 backdrop-blur-lg p-3 fixed top-0 w-full h-auto z-50 items-center"
>
  <!-- Logo -->
  <FerrumLogo />
  <!-- Navegacion entre secciones -->
  <nav class="text-white flex gap-6 items-center text-lg font-medium">
    <ul class="flex space-x-10 cursor-pointer">
      <a class="hover:text-primary-light transition-colors duration-300 relative group">
        Home <span
          class="absolute bottom-0 left-0 w-0 h-0.5 bg-linear-to-r from-primary to-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
      <a class="hover:text-primary-light transition-colors duration-300 relative group"
        >Descargas
        <span
          class="absolute bottom-0 left-0 w-0 h-0.5 bg-linear-to-r from-primary to-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
      <a class="hover:text-primary-light transition-colors duration-300 relative group"
        >Demo
        <span
          class="absolute bottom-0 left-0 w-0 h-0.5 bg-linear-to-r from-primary to-accent group-hover:w-full transition-all duration-300"
        ></span>
      </a>
    </ul>
  </nav>
  <!-- Redes sociales -->
  <div></div>
</header>
