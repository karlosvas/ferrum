---
import DownloadCard from "../components/DownloadCard.astro";
import AppleIcon from "@/components/AppleIcon.astro";
import BoxIcon from "@/components/icons/BoxIcon.astro";
import DownloadIcon from "@/components/icons/DownloadIcon.astro";
import MonitorIcon from "@/components/icons/MonitorIcon.astro";
---

<section class="mt-20 space-x-10">
  <div>
    <h2 class="text-3xl font-bold">Comienza a explorar hoy</h2>
    <h3 class="text-2xl font-bold text-primary-light">Descargas</h3>
    <p>
      Descarga Gratuita Comienza a Explorar Hoy Descarga Ferrum gratis para tu sistema operativo y comienza a visualizar
      anatomía microscópica en 3D inmediatamente.
    </p>
    <div class="bg-gray-900 p-5 rounded-md mt-5 space-y-4 flex justify-around items-center md:flex-row flex-col">
      <!-- Descargas -->
      <div>
        <DownloadCard>
          <MonitorIcon width="20px" height="20px" />
          <p slot="description">
            Windows Windows 10/11<br />
            <span class="text-primary-light">•</span> 64-bit v1.2.0 245 MB
          </p>
          <div slot="button" class="flex justify-center items-center gap-2">
            Descargar para Windows <DownloadIcon width="20px" height="20px" />
          </div>
        </DownloadCard>
        <DownloadCard>
          <AppleIcon width="20px" height="20px" />
          <p slot="description">
            macOS macOS 11+<br /><span class="text-primary-light">•</span> Apple Silicon / Intel v1.2.0 238 MB
          </p>
          <div slot="button" class="flex justify-center items-center gap-2">
            Descargar para macOS <DownloadIcon width="20px" height="20px" />
          </div>
        </DownloadCard>
        <DownloadCard>
          <BoxIcon width="20px" height="20px" />
          <p slot="description">Linux Ubuntu 20.04+ / Fedora 35+ v1.2.0 252 MB</p>
          <div slot="button" class="flex justify-center items-center gap-2">
            Descargar para Linuxs <DownloadIcon width="20px" height="20px" />
          </div>
        </DownloadCard>
      </div>
      <!-- Gafas -->
      <img src="gafas.webp" alt="" class="object-cover w-full md:w-1/3 rounded-2xl h-96 md:h-1/3" />
    </div>
  </div>
</section>

<p class="text-muted py-20">
  <h2 class="text-2xl font-bold">Requisitos del Sistema</h2>
  <div class="bg-gray-900 my-10 p-5 rounded-md">
    <span class="text-primary-light">Mínimos</span><br />
    <span class="text-primary-light">•</span> Procesador: Intel Core i5 / AMD Ryzen 5 <br /><span
      class="text-primary-light">•</span
    > Memoria RAM: 8 GB <br /><span class="text-primary-light">•</span> Gráficos: NVIDIA GTX 1050 / AMD RX 560 <br
    /><span class="text-primary-light">•</span> Almacenamiento: 2 GB disponibles
  </div>
  <div class="bg-gray-900 my-10 p-5 rounded-md">
    <span class="text-primary-light">Recomendados</span>
    <br /><span class="text-primary-light">•</span> Procesador: Intel Core i7 / AMD Ryzen 7 <br /><span
      class="text-primary-light">•</span
    > Memoria RAM: 16 GB <br /><span class="text-primary-light">•</span> Gráficos: NVIDIA RTX 3060 / AMD RX 6600 <br
    /><span class="text-primary-light">•</span> VR Headset para experiencia
  </div>
</p>
